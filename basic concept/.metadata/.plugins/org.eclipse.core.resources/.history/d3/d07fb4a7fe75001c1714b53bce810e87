package PatternProblem;

public class pattern8 {

	public static void main(String[] args) {
		
		patternEight(5);
	}

	static void patternEight(int n){
		for(int row=1;row<=2*n-1;row++) {
			  
			for(int s=1;s<=2*n-row;s++) {
			  
				  System.out.print(" ");
			  }
		  
				for(int col=1;col<=row;col++) {
					System.out.print("*");
				}
			System.out.println();
			}			
	}
	
	
}